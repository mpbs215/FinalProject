<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-4.2.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- Root Context: defines shared resources visible to all other web components -->
	<security:http auto-config="true" use-expressions="true">
		<security:intercept-url access="hasRole('ROLE_USER')" pattern="/user/**"/>
		<security:intercept-url access="hasRole('ROLE_MEMBER')" pattern="/member/**"/>
		<security:intercept-url access="hasRole('ROLE_ADMIN')" pattern="/admin/**"/>
	</security:http>
	
	
	<security:authentication-manager>
		<security:authentication-provider>
			<security:user-service>
				<security:user name="user" authorities="ROLE_USER" password="1234"/>
				<security:user name="jang" authorities="ROLE_MEMBER" password="1234"/>
				<security:user name="admin" authorities="ROLE_USER,ROLE_MEMBER,ROLE_ADMIN" password="1234"/>
			</security:user-service>
		</security:authentication-provider>
	</security:authentication-manager>
</beans>
