<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="authoritiesMapper">
	
	<resultMap type="AuthorityDTO" id="authorityDTO">
		<id column="user_id" property="userId"/>
		<result column="role" property="role"/>	
	</resultMap>
	
	<insert id="insertAuthority"  parameterType="AuthorityDTO">
		INSERT INTO AUTHORITY_TB
			VALUES(#{userId}, #{role})
	</insert>
	
	<select id="selectAuthorityByUserId"  parameterType="string" resultMap="authorityDTO">
		SELECT USER_ID, ROLE
		  FROM AUTHORITY_TB
		WHERE USER_ID = #{_parameter}
	</select>
	
</mapper>