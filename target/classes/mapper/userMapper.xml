<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="userMapper"  >
	<select id="loginCheck" parameterType="userDTO" resultType="userDTO">
	select user_id as userId , pwd , name from member2 where user_id=#{userId} and pwd=#{pwd}
	</select>
	<select id="selectReviewByStar" parameterType="reviewDTO" resultType="reviewDTO">
			select*from review
			<where>
				<if test="parkNo!=null">
					parkNo=#{parkNo}	and
				</if>
				<if test= "rating!=null">
					and rating=#{rating}
				</if>
			</where>
	</select>
	
	<select id="selectReview" parameterType="int" resultType="reviewDTO">
		select*from review where parkNo=#{_parameter}
	</select>
	
	<insert id="insertReview" parameterType="reviewDTO">
		insert into review values(#{userId},#{parkNo},#{rating},#{reviewContent})
	</insert>
	
	<select id="selectOnePark" parameterType="int">
			select*from park
			where parkNo=#{value}
	</select>
	
	<select id="selectOneParkRegi" parameterType="int">
			select*from parkRegi
			where parkNo=#{value}
	</select>
	
	<select id="selectUserInfo" parameterType="string"> select * from UserInfo where user_id=#{userId} </select>

	<update id="updateUserInfo" parameterType="userDTO">
	UPDATE UserInfo SET password=#{password}, username=#{userName}, email=#{email}, hp=#{hp}, address=#{address} WHERE user_id=#{userId} 
	</update>
	
	<select id="selectImage" parameterType="int" resultType="parkImgDTO">
		select*from park_image_tb where parkNo=#{_parameter}
	</select>
	
</mapper>